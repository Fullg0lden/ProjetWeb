            <tr>
                <td>Texte</td>
                <td>Price</td>
                <td>Place</td>
                <td>Discipline</td>
            </tr>
            </thead>
            <tbody>
                {% for advert in listAdvert %}
                <li>{{ advert.id }}</li>
                <tr>
                    <td>{{ advert.text }}</td>
