{% extends 'base.html.twig' %}

{% block title %}Mes annonces{% endblock %}

{% block body %}
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">Ici toutes les annonces !</h1>
            <p class="lead">En d√©veloppement !</p>
        </div>
    </div>
    <div class="container">
        <div class ="div row flex" style="">
            {% for advert in adverts %}
                <div class="card text-white bg-dark mb-3">
                    <div class="card-header">
                        {% for discipline in advert.disciplines %}
                            <h5 class="card-title">{{ discipline.name }}</h5>
                        {% endfor %}
                    </div>
                    <div class="card-body">
                        <p class="card-text">{{ advert.text }}</p>
                        <h6 class="card-title">{{ advert.place }}</h6>
                        <h6 class="card-title">{{ advert.price }} euros</h6>

                    </div>
                    <div class="card-footer">
                        <a class="btn bg-danger text-light" href="/myAdvert/remove/{{ advert.id }}">Supprimer</a>
                        <a class="btn bg-warning" href="/myAdvert/update/{{ advert.id }}">Modifier</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
