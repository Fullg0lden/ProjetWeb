{% extends 'base.html.twig' %}

{% block title %}EasyAd - CreationAnnonces{% endblock %}

{% block body %}
<div class="row justify-content-sm-center my-5 ">
    <div class="border border-primary p-2 rounded bg-light p-5">
        {{ form_start(form) }}
        <div class="form-group">
            <h>{{ form_label(form.text,'LibelleAnnonce',{'label_attr':{'class':'text-dark'}}) }}</h>
            {{ form_widget(form.text,{'attr':{'class':'form-control','placeholder':'Entrer le libelle de votre annonce','rows' : '3'}}) }}
        </div>
        <div class="form-group">
            <h>{{ form_label(form.price,'Price',{'label_attr':{'class':'text-dark'}}) }}</h>
            {{ form_widget(form.price,{'attr':{'class':'form-control','placeholder':'Entrez le prix de votre cours'}}) }}
        </div>
        <div class="form-group">
            <h>{{ form_label(form.place,'Place',{'label_attr':{'class':'text-dark'}}) }}</h>
            {{ form_widget(form.place,{'attr':{'class':'form-control','placeholder':'Entrez le lieu de travail'}}) }}
        </div>
        <div class="row justify-content-sm-center">
            {{ form_row(form.submit,{'attr':{'class':'btn btn-primary mx-auto'}}) }}
        </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}