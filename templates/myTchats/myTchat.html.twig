{% extends 'base.html.twig' %}

{% block title %}Mes tchats{% endblock %}

{% block body %}

    <h1>Tchats de mes annonces</h1>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">
                Annonceur
            </th>
            <th scope="col">
                Demandeur
            </th>
        </tr>
        </thead>
        <tbody>
        {% for tchat in listTchats %}
            <tr>
                <th scope="col">{{ tchat.user1.login }}</th>
                <th scope="col">{{ tchat.userAux.login }}</th>
                <th scope="col"><a role="button" class="btn btn-secondary m-1" href="/tchatAux/{{ tchat.id }}">Repondre</a></th>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <h1>Tchats sur les annonces des autres</h1>

    <table class="table">
        <thead>
        <tr>
            <th scope="col">
                Annonceur
            </th>
            <th scope="col">
                Demandeur
            </th>
        </tr>
        </thead>
        <tbody>
        {% for tchat in listTchatsAux%}
            <tr>
                <th scope="col">{{ tchat.user1.login }}</th>
                <th scope="col">{{ tchat.userAux.login }}</th>
                <th scope="col"><a role="button" class="btn btn-secondary m-1" href="/tchatAux/{{ tchat.id }}">Repondre</a></th>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}